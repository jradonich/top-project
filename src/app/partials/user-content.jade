div.container
  div.row(ng-controller="UserController")
    div(ng-include="'app/partials/user.html'")

  div.row
    div.content-container(ng-controller="ContentController")
      div.row
        div.col-md-3.col-sm-6.content-container-item(ng-repeat="section in sections")
          div.content-panel(content-item content-mod="section.data" content="section.layout")

      h2.row.text-center Let me introduce myself ...

      div.row
        div.col-md-3.col-sm-6(ng-repeat="mysection in mySections")
          content-item(content="mysection")
      div.row
        div.well-lg.break-content.inverse(data-ng-show="!isReadOnly")
          div.row
            div.col-md-5.col-md-offset-4.text-center.vertical-align.col-sm-6.col-xs-12
              h4 To hire {{userObj.getFirstName()}} join us as a
                button.btn.btn-default.text-capitalize Client
            div.col-md-3.pull-right.vertical-align.col-sm-6.col-xs-12
              span.smaller.text-right Or as a developer
                button.btn.btn-default.btn-sm
                  span.glyphicon.glyphicon-play-circle
        div.well.well-lg.well-darker.break-content.simple(data-ng-show="isReadOnly")
          div.row
            div.col-sm-12.text-center
              span.h4 Important! Please also fill out the Q&A form
              button.text-uppercase.btn.btn-default Q&A Form
          div.row
            div.col-sm-12.text-center
              span.smaller 5 of 25 questions answered.




  //Top Skills section
  div.row
    div.top-skills(ng-controller="FooterController")
      h4.text-center Top skills on toptal
      ul.list-unstyled.skills-list
        li(ng-repeat="skillGroup in topSkillsList")
          div.row(ng-repeat="skill in skillGroup")
            div.col-md-1.col-sm-3.col-xs-3
              span(ng-show="$first").alpha-group {{skill[0] | uppercase}}
            div.col-md-10.col-sm-8.col-xs-8
              a(href="http://toptal.com") {{skill}}


