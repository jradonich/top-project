div.quoted-content(editable-textarea="model.data" e-placeholder="{{layout.defaultContent || 'Add ' + (layout.name | lowercase) + '...'}}"
  onshow="onContentElementShow()" onhide="bodyClick(true)")
    span(ng-show="!model.data") Add Content...
    span.content-display(ng-show="model.data")
      blockquote
        p {{model.data}}
        cite.pull-right {{user.getUsername()}}
